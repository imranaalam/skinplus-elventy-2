
<!doctype html>
<html class="no-js" lang="{{ metadata.language or 'en' }}">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
        <meta name="author" content="ThemeZaa">
        <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
        <title>{{ title or "Crafto - The Multipurpose HTML5 Template" }}</title>
        <meta name="description" content="{{ description or "Elevate your online presence with Crafto - a modern, versatile, multipurpose Bootstrap 5 responsive HTML5, SCSS template using highly creative 48+ ready demos." }}">
        
        <!-- Favicon icons -->
        <link rel="shortcut icon" href="/public/images/favicon.png">
        <link rel="apple-touch-icon" sizes="57x57" href="/public/images/apple-touch-icon-57x57.png">
        <link rel="apple-touch-icon" sizes="72x72" href="/public/images/apple-touch-icon-72x72.png">
        <link rel="apple-touch-icon" sizes="114x114" href="/public/images/apple-touch-icon-114x114.png"> 
        
        <!-- Google Fonts -->
        <link rel="preconnect" href="https://fonts.googleapis.com" crossorigin>
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        
        <!-- Stylesheets and Font Icons -->
        {%- css %}{% include "public/css/vendors.min.css" %}{% endcss %}
        {%- css %}{% include "public/css/icon.min.css" %}{% endcss %}
        {%- css %}{% include "public/css/style.css" %}{% endcss %}
        {%- css %}{% include "public/css/responsive.css" %}{% endcss %}
        {%- css %}{% include "public/css/beauty-salon/beauty-salon.css" %}{% endcss %}
        
        <style>{% getBundle "css" %}</style>
    </head>
    <body
        data-mobile-nav-trigger-alignment="right"
        data-mobile-nav-style="modern"
        data-mobile-nav-bg-color="#2E3844"
        class="custom-cursor">
        
        <!-- Start Cursor -->
        <div class="cursor-page-inner">
            <div class="circle-cursor circle-cursor-inner"></div>
            <div class="circle-cursor circle-cursor-outer"></div>
        </div>
        <!-- End Cursor -->
        
        <!-- Header -->
        <header>
            {% if page.url == "/" %}
                {% include "partials/header-home.njk" %}
            {% else %}
                {% include "partials/header-default.njk" %}
            {% endif %}
        </header>
        
        <!-- Main Content -->
        <main id="skip">
            {{ content | safe }}
        </main>
        
        <!-- Footer -->
          {% include "partials/footer.njk" %}
        
        <!-- Scripts -->
        {%- js %}{% include "public/js/jquery.js" %}{% endjs %}
        {%- js %}{% include "public/js/vendors.js" %}{% endjs %}
        {%- js %}{% include "public/js/main.js" %}{% endjs %}
        <script>{% getBundle "js" %}</script>
        
        <!-- Google Maps API for templates that need maps -->
        {# <script async defer src="https://maps.googleapis.com/maps/api/js?key=YOUR_API_KEY&callback=initMap"></script> #}
    </body>
</html>
