{% set featureImage = featureImage or 'https://via.placeholder.com/960x630' %}
{% set featureTitle = featureTitle or 'About the salon' %}
{% set mainHeading = mainHeading or 'Body treatments. Skin care beauty.' %}
{% set mainText = mainText or 'With over 35 years of experience footprint of over 400+ salons in 125 cities across the length and breadth of the country. We have developed a deep understanding of the beauty industry.' %}
{% set primaryLink = primaryLink or '/demo-beauty-salon-story.html' %}
{% set primaryLinkText = primaryLinkText or 'About story' %}
{% set secondaryLink = secondaryLink or 'https://www.youtube.com/watch?v=cfXHhfNy7tU' %}
{% set secondaryLinkText = secondaryLinkText or 'Luxury salon' %}
{% set videoIcon = videoIcon or 'bi bi-play-circle' %}

<section class="p-0">
    <div class="container-fluid p-0"> 
        <div class="row align-items-center g-0">
            <div class="col-xl-6 col-lg-6 position-relative top-minus-2px md-mb-30px" data-anime='{ "effect": "slide", "color": "#f2e0dc", "direction":"lr", "easing": "easeOutQuad", "duration": 600, "delay":500}'> 
                <img src="{{ featureImage }}" class="border-radius-rb-50px" alt="">
            </div>
            <div class="col-xl-4 col-lg-6 offset-xl-1 lg-ps-15px lg-pe-15px text-center text-lg-start" data-anime='{ "el": "childs", "translateY": [30, 0], "opacity": [0,1], "duration": 600, "delay": 300, "staggervalue": 300, "easing": "easeOutQuad" }'> 
                <span class="fs-16 text-uppercase text-gradient-san-blue-new-york-red fw-700 mb-10px ls-1px d-inline-block">{{ featureTitle }}</span>
                <h2 class="alt-font fw-400 text-dark-gray w-75 xl-w-90 lg-w-100 ls-minus-1px">{{ mainHeading }}</h2>
                <p class="mb-30px w-60 xl-w-90 lg-w-100 lg-mb-25px">{{ mainText }}</p>
                <div class="d-sm-flex align-items-center justify-content-center justify-content-lg-start">
                    <a href="{{ primaryLink }}" class="btn btn-large btn-dark-gray btn-hover-animation-switch btn-round-edge btn-box-shadow xs-me-20px xs-mb-10px">
                        <span> 
                            <span class="btn-text">{{ primaryLinkText }}</span>
                            <span class="btn-icon"><i class="feather icon-feather-arrow-right"></i></span>
                            <span class="btn-icon"><i class="feather icon-feather-arrow-right"></i></span>
                        </span>
                    </a>
                    <a href="{{ secondaryLink }}" class="btn btn-link hover-text-light btn-extra-large text-dark-gray popup-youtube xs-ps-0 xs-mb-10px"><i class="{{ videoIcon }} align-middle lh-normal icon-extra-medium me-10px"></i>{{ secondaryLinkText }}</a>
                </div>
            </div>
        </div>
    </div>
</section>
